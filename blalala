#include <stdio.h>
#include <unistd.h>

int main(void) {
    printf("hello world!\n");
    fork();
    printf(" i am after forking\n");
    printf("\ti am process %d.\n", getpid());
}



#include <stdio.h>
#include <unistd.h>

int main(void) {
    int pid;
    printf("hello world!\n");
    printf("i am the present process and pid id : %d\n", getpid());
    printf("Here i am before use to froking\n");
    pid = fork();
    printf("Here i am just forking\n");
    if(pid == 0)
        printf("i am the child process and pid ls :%d.\n", getpid());
    else
        printf("i am the present process and pid ls :%d.\n", getpid());
}


#include <stdio.h>
#include <unistd.h>

int main(void) {
    printf("Here i am just before firt forking statement\n");
    fork();
    printf("Here i am just after firt forking statement\n");
    fork();
    printf("Here i am just after second forking statement\n");
    printf("\t\tHello world form process %d:\n", getpid());
}


#include <stdio.h>
#include <sys/wait.h>
#include <unistd.h>
#include <stdlib.h>

int main(void) {
    int pid;
    int status;
    printf("Hello world!\n");
    pid = fork();
    if(pid == -1) {
        perror("bad fork");
        exit(1);
    }
    if(pid == 0) {
        printf("i am the child process.\n");
    } else {
        wait(&status);
        printf("i am the parent process.\n");
    }
}


#include <unistd.h>
#include <stdio.h>
#include <stdlib.h>

int main(int argc, char *argv[]) {
    char *who;
    int i;

    if(fork()) {
        who = "Kittinun Pewkhum"; 
    } else {
        who = "child";
    }

    for(i = 0; i < 6; i++) {
        printf("fork1: %s\n", who);
    }

    exit(0);
}


#include <unistd.h>
#include <stdio.h>
#include <stdlib.h>

int main(int argc, char *argv[]) {
    int i;
    char *who;
    int n;

    if (fork()) {
        who = "parent";
        n = 2;
    } else {
        who = "child";
        n = 1;
    }

    for(i = 1; i <= 10; i++) {
        fprintf(stdout, " %2d. %7s: my pid = %6d, ppid = %6d\n", i, who, getpid(), getpid());
        fflush(stdout);
        sleep(10);
    }
    exit(0);
}




#include <unistd.h>
#include <stdio.h>
#include <math.h>
#include <stdlib.h>
#include <sys/wait.h>

int main(int argc, char *argv[]) {
    char *who;
    int status;

    if(fork()) {
        who = "parent";
        printf("pi=%f\n", 4*atan(1));
        wait(&status);
        exit(0);
    } else {
        who = "child";
        execlp("/usr/bin/date", "date", (char *)0);
    }
}



#include <unistd.h>
#include <stdio.h>
#include <math.h>
#include <stdlib.h>
#include <sys/wait.h>

int main(int argc, char *argv[]) {
    char *who;
    int status;

    if(fork()) {
        who = "parent";
        printf("pi=%f\n", 4*atan(1));
        wait(&status);
        exit(0);
    } else {
        who = "child";
        execlp("/bin/my-script", "my-script", "a", "b", (char *)0);
    }
}